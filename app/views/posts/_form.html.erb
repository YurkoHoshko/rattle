<%= form_for(@post, url: posts_path) do |f| %>
  <div class="form-group clearfix">
    <%= f.label :title %><br />
    <%= f.text_field :title, autofocus: true, class: "form_control col-md-12"  %>
  </div>

  <div class="form-group clearfix">
    <%= f.label :content %><br />
    <%= f.text_area :content, autocomplete: "off", class: "form_control col-md-12" %>
  </div>

  <div class="actions clearfix">
    <%= f.submit "Add Post", class: "btn btn-primary" %>
  </div>
<% end %>