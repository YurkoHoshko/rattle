<div class="well">
  <%= render partial: "post_content", locals: { post: @post } %>
  <%= render partial: "post_info", locals: { post: @post } %>
</div>

<div class="well">
  <h2>Comments</h2>
  <% if current_user %>
    <%= render partial: "comments/form", locals: { post: @post } %>
  <% else %> 
    <h4> Only registered users can leave comment </h3>
    <p>
      <%= link_to('Sign In', new_user_session_path) %> or 
      <%= link_to('Sign Up', new_user_registration_path) %>, please!
    </p>
  <% end %>
  <%= render partial: "comments/comment", collection: @comments.reject {|c| c.parent_id }%> 
</div>

