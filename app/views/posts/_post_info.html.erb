<div class="row">
  <div class="col-md-6">
    Score: <%= post.score %>
    <%= link_to post_upvote_path(post), method: :post do %>
      <span class="glyphicon glyphicon-arrow-up"></span>
    <% end %>
    <%= link_to post_downvote_path(post), method: :post do %>
      <span class="glyphicon glyphicon-arrow-down"></span>
    <% end %>
  </div>
  <div class="col-md-6">Creator: <%= link_to(post.user.email, user_path(post.user)) %></div>
</div>